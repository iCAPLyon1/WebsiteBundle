<div class="menu-options" ng-show="optionsWindow=='menu'">
    <div class="float-left">
        <div>
            <div class="btn-group">
                <button class="btn btn-default btn-sm" ng-class="{'active':options.menuOrientation=='horizontal'}" ng-click="options.menuOrientation='horizontal'">{{ 'horizontal'|trans({},'icap_website') }}</button>
                <button class="btn btn-default btn-sm" ng-class="{'active':options.menuOrientation=='vertical'}" ng-click="options.menuOrientation='vertical'">{{ 'vertical'|trans({},'icap_website') }}</button>
            </div>
        </div>
        <div ng-show="options.menuOrientation=='vertical'">
            <label for="menu-width">{{ 'width'|trans({},'icap_website') }}</label>
            <input type="number" id="menu-width" max="200" min="50" class="form-control" ng-model="options.menuWidth"/> px
        </div>
    </div>
    <div class="float-left">
        <div>
            <label for="menu-bg-color">{{ 'bg_color'|trans({},'icap_website') }}</label>
            <input class="color form-control" id="menu-bg-color" ng-model="options.menuBgColor"/>
        </div>
        <div>
            <label for="menu-hover-color">{{ 'hover_color'|trans({},'icap_website') }}</label>
            <input class="color form-control" id="menu-hover-color" ng-model="options.menuHoverColor"/>
        </div>
        <div>
            <label for="menu-section-color">{{ 'section_color'|trans({},'icap_website') }}</label>
            <input class="color form-control" id="menu-section-color" ng-model="options.sectionBgColor"/>
        </div>
    </div>
    <div class="float-left">
        <div>
            <label for="menu-font-color">{{ 'font_color'|trans({},'icap_website') }}</label>
            <input class="color form-control" id="menu-font-color" ng-model="options.menuFontColor"/>
        </div>
        <div>
            <label for="section-font-color">{{ 'section_font_color'|trans({},'icap_website') }}</label>
            <input class="color form-control" id="section-font-color" ng-model="options.sectionFontColor"/>
        </div>
        <div>
            <label for="menu-font-size">{{ 'font_size'|trans({},'icap_website') }}</label>
            <input type="number" id="menu-font-size" max="20" min="10" ng-model="options.menuFontSize" class="form-control"/> px
        </div>
    </div>
    <div class="float-left">
        <div>
            <label for="menu-font-family">{{ 'font_family'|trans({},'icap_website') }}</label>
            <select id="menu-font-family" class="form-control" ng-model="options.menuFontFamily">
                <option value="inherit">{{ 'default'|trans({},'icap_website') }}</option>
                <option value="Arial, Tahoma, Helvetica, FreeSans, sans-serif">Arial</option>
                <option value="'Courier New', Courier, FreeMono, monospace">Courier</option>
                <option value="Georgia, Utopia, 'Palatino Linotype', Palatino, serif">Georgia</option>
                <option value="Impact, sans-serif">Impact</option>
                <option value="'Times New Roman', Times, FreeSerif, serif">Times New Roman</option>
                <option value="'Trebuchet MS', Trebuchet, sans-serif">Trebuchet</option>
                <option value="Verdana, Geneva, sans-serif">Verdana</option>
            </select>
        </div>
        <div>
            <button class="btn btn-default" ng-click="options.toggleBold()" ng-class="{'active':options.menuFontWeight=='bold'}"><i class="fa fa-bold"></i></button>
            <button class="btn btn-default" ng-click="options.toggleItalic()" ng-class="{'active':options.menuFontStyle=='italic'}"><i class="fa fa-italic"></i></button>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
                </ul> -->
                <div ui-tree id="tree-root">
                    <ul id="edit-menu" class="edit-menu" ui-tree-nodes="" ng-model="menu.root.children">
                        <li ng-repeat="node in menu.root.children" ui-tree-node ui-tree-handle ng-include="'{{ asset('bundles/icapwebsite/templates/nodes_renderer.html') }}'"></li>
                    </ul>
                </div>
            </div>
            <div class="edit-page-container">
                <label>Label</label>
                <input type="text" ng-model="menu.currentNode.label" />
                <button ng-click="addNewMenuItem()">Create item</button>
            </div>
            <div class="clear"></div>
        </div>
        <!-- END OF CONTENT EDITOR -->
        <div class="footer resizeable-bottom" ng-style="footerStyle()" ng-show="options.footer" ng-click="optionsWindow='footer'">
            <div>Footer {{ '{{options.footerHeight}}' }}px</div>
        </div>
        <div class="horizontal-resizer" ng-style="footerResizerStyle()" resizer-bottom resizer resizer-max="200" resizer-min="0" resizer-variable="options.footerHeight" ng-show="options.footer">
